# Server Configuration
PORT=5000
NODE_ENV=development
API_URL=http://localhost:5000

# MySQL Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=wedding_check_in
DB_PORT=3306
DB_CONNECTION_LIMIT=10
DB_TIMEZONE=local

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
QR_SECRET=your_qr_secret_here

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
EVENT_BACKUP_SCHEDULE="0 */6 * * *"  # Every 6 hours

# Health Check Configuration
HEALTH_CHECK_INTERVAL="*/5 * * * *"  # Every 5 minutes
HEALTH_CHECK_THRESHOLD=1000  # Response time threshold in ms

# Session Management
SESSION_CLEANUP_SCHEDULE="0 * * * *"  # Every hour
DEFAULT_DEVICE_LIMIT=5

# Cloudflare R2 Configuration
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
R2_BUCKET_NAME=your_bucket_name